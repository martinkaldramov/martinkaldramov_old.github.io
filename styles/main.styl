//Google Fonts
@import url('https://fonts.googleapis.com/css?family=Audiowide');
@import url('https://fonts.googleapis.com/css?family=Play');

//Font Variables
$logo-font = 'Audiowide', cursive;
$main-font = 'Play', sans-serif;
$secondary-font = sans-serif;

// Color Variables
$main-color = #151515;
$main-color-1 = #212020;
$main-color-2 = #404244;

body
  font-family: $secondary-font
  background-color: $main-color
  color: white

/*!-----------------------------------------------------
--------------------- Header styles --------------------
--------------------------------------------------------*/

header
  display: flex
  justify-content: space-between
  padding: 3% 0

  p
    font-family: $main-font
    font-size: 1.2rem    
    align-self: center

.logo
  background-color: $main-color-2
  padding: 3%

  h1
    font-size: 2.5rem

  h3
    font-size: 1.5rem
  

.logo h1
.logo h3
  text-transform: uppercase
  font-family: $logo-font

.top-line
  background: linear-gradient(#ff822e, #fffc99, #fffc99, #fffc99, #ff822e);
  width: 100%;
  height: 4px;
  position: relative;
  top: -1.5rem;
  box-shadow: 0 7px 57px 7px #ff822e;

/*!-----------------------------------------------------
----------------- Navigation styles --------------------
--------------------------------------------------------*/

nav ul
  display: flex
  
  li
    color: white
    background-color: grey
    font-family: $main-font
    text-transform: uppercase
    flex-basis: 35.29%;
    text-align: center;
    padding: 2% 0;
    border: 1px solid white;

/*!-----------------------------------------------------
----------------- Main Section Styles ------------------
--------------------------------------------------------*/

main
  display: flex
  justify-content: space-between
  flex-wrap: wrap

main > article:not(:first-child)
  background-color: grey 
  border: 5px solid red
  flex-basis: 50%  

.content h3
  font-family: $main-font
  font-size: 1.2rem

/*!-----------------------------------------------------
------------------ Footer Styles -----------------------
--------------------------------------------------------*/

footer
  display: flex
